use strict;
use esmith::Build::CreateLinks  qw(:all);

#--------------------------------------------------
# actions for nethserver-postgresql-update event
#--------------------------------------------------

my $event = "nethserver-guacamole-update";

event_actions($event, 
    'initialize-default-databases' => '00',
    'nethserver-guacamole-conf' => '02' #must be executed before template expansion
);

event_templates($event, '/etc/guacamole/guacamole.properties');

event_services($event, 'guacd' => 'restart');

